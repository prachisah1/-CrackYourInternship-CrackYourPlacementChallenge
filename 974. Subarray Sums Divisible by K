class Solution {
public:
    int subarraysDivByK(vector<int>& nums, int k) {
        int n=nums.size();
        int sum=0;
        unordered_map<int,int>mp;
        mp[0]=1;
        int answer=0;
        for(int i=0;i<n;i++)
        {
            sum+=nums[i];
            int rem=sum%k;
            
            if(rem<0)

            {
                rem=rem+k;
            }
            if(mp.find(rem)!=mp.end()){
                answer+=mp[rem];
            }
            mp[rem]++;
        }
        return answer;
    }
};
