class Solution {
  public:
    int findPair(int n, int x, vector<int> &v) {
        // code here
               sort(v.begin(),v.end());
        
        for(int i=0;i<n;i++)
        {
            int a = v[i] - x ;
            int b = v[i] + x;
            
            if(binary_search(v.begin()+i+1,v.end(),a))
              return true;
              
            if(binary_search(v.begin()+i+1,v.end(),b))
              return true;
              
        }
        return -1;
    }
};
