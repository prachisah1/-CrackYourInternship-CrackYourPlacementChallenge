class Solution {
public:
    vector<int> twoSum(vector<int>& nums, int target) {
        vector<int>answer;
        unordered_map<int,int>mp;
        int n=nums.size();
        for(int i=0;i<n;i++)
        {
            int diff=target-nums[i];
            if(mp.find(diff)!=mp.end())
            {
                answer.push_back(mp[diff]);
                answer.push_back(i);
            }
            mp[nums[i]]=i;
        }
        return answer;
    }
};
